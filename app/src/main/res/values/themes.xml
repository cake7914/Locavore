<resources>
    <!-- Base application theme. -->
    <style name="Theme.Locavore" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/dark_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_yellow</item>
        <item name="colorSecondaryVariant">@color/light_yellow</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SignupBackground" parent="Theme.Locavore">
        <item name="android:windowBackground">@drawable/inverse_login_screen2</item>
    </style>

    <style name="LoginBackground" parent="Theme.Locavore">
        <item name="android:windowBackground">@drawable/login_screen</item>
    </style>

    <style name="SplashScreenBackground" parent="Theme.Locavore">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
</resources>